<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        layout="@layout/view_simple_topbar"/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="90dp"
        android:gravity="center"
        android:paddingTop="@dimen/margin_15"
        android:paddingBottom="@dimen/margin_15"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/titleimage"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:background="@mipmap/upload_image_side"/>
        <LinearLayout
            android:layout_marginLeft="@dimen/margin_15"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/home_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize_18"
                android:textColor="@color/top_bar_background"
                android:text="XXX大药房"
                />
            <TextView
                android:id="@+id/home_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:textSize="@dimen/textsize_16"
                android:textColor="@color/black_66"
                android:text="XXX市"
                />
            <TextView
                android:id="@+id/home_context"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3"
                android:textSize="@dimen/textsize_16"
                android:textColor="@color/black_99"
                android:text="药品需求:"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/homechatimage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/icon_tab_chat_press"/>
    </LinearLayout>
    <fragment
        android:id="@+id/conversation"
        android:name="io.rong.imkit.fragment.ConversationFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>